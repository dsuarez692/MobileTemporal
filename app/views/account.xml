<Alloy>
    <View id="mainView">
        <View id="mainTopBar">
            <View id="appTitle">
                <View id="menuButton"/>
                <Label class="appTitleLabel">Mi cuenta</Label>
                <View class="collapsibleButton" id="collapsibleButton"/>
            </View>
        </View>
        <ScrollView id="content">
            <View id="userPhoto"/>
            <ScrollView id="form">
                <Label class="labelField">NOMBRE COMPLETO</Label>
                <TextField class="textSimple" hintText="  Nombre" id="name"/>
                <TextField class="textSimple" hintText="  Apellido" id="last"/>
                <Label class="labelField">NOMBRE DE USUARIO</Label>
                <TextField class="textSimple" hintText="  Obligatorio" id="username"/>
                <Label class="labelField">CONTRASEÃ‘A</Label>
                <TextField class="textSimple" hintText="  Entre 6 y 20 caracteres" id="password" passwordMask="true"/>
                <TextField class="textSimple" hintText="  Repetir" id="password2" passwordMask="true"/>
            </ScrollView>
            <View class="buttonSimple" id="continueBtn" onClick="validateData">
                <Label id="btnText">Continuar</Label>
            </View>
        </ScrollView>
        <View id="photoMenu">
            <TableView id="photoMenuTable">
                <TableViewRow class="tableRow" id="takePhoto">
                    <View>
                        <Label>Tomar foto</Label>
                    </View>
                </TableViewRow>
                <TableViewRow class="tableRow" id="selectPhoto">
                    <View>
                        <Label>Seleccionar foto existente</Label>
                    </View>
                </TableViewRow>
                <TableViewRow class="tableRow" id="deletePhoto">
                    <View>
                        <Label>Eliminar imagen de perfil</Label>
                    </View>
                </TableViewRow>
                <TableViewRow class="tableRow" id="cancelPhoto">
                    <View>
                        <Label>Cancelar</Label>
                    </View>
                </TableViewRow>
            </TableView>
        </View>
    </View>
</Alloy>
