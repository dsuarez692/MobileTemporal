<Alloy>
    <View id="mainView">
        <View id="mainTopBar">
            <View id="appTitle">
            	<View id="menuButton"/>
                <Label class="appTitleLabel">Mi cuenta</Label>
                <View id="collapsibleButton"/>
            </View>
        </View>
        <ScrollView id="content">
            <View id="subtitleBar">
                <Label class="subtitleLabel">Cambio de contraseña</Label>
            </View>
            <ScrollView id="form">
                <Label class="labelField">Usuario</Label>
                <Label class="labelField">CONTRASEÑA ANTIGUA</Label>
                <TextField class="textSimple" id="oldpassword" passwordMask="true"/>
                <Label class="labelField">CONTRASEÑA NUEVA</Label>
                <TextField class="textSimple" hintText="  Entre 6 y 20 caracteres" id="password" passwordMask="true"/>
                <Label class="labelField">CONFIRME CONTRASEÑA</Label>
                <TextField class="textSimple" hintText="  Repetir" id="password2" passwordMask="true"/>
            </ScrollView>
            <View class="buttonSimple" id="continueBtn" onClick="validateData" onTouchend="changeColor" onTouchstart="changeColor">
                <Label id="btnText">Guardar</Label>
            </View>
            <View class="buttonSimple" id="cancelBtn" onTouchend="changeColor" onTouchstart="changeColor">
                <Label color="black" id="btnText">Cancelar</Label>
            </View>
        </ScrollView>
    </View>
</Alloy>
