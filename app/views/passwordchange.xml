<Alloy>
    <View id="mainView">
        <View id="mainTopBar">
            <View id="menuButton"/>
			<View id="appTitle">
				<Label class="appTitleLabel">Mi cuenta</Label>
			</View>
			<View id="collapsibleButton" />
        </View>
        <ScrollView id="content">
        	<View id="subtitleBar">
        		<Label class="subtitleLabel">Cambio de contraseña</Label>
        	</View>
	        <ScrollView id="form">
	        	<Label class="labelField">Usuario</Label>
	        	<Label class="labelField">CONTRASEÑA ANTIGUA</Label>
	        	<TextField class="textSimple" passwordMask="true" id="oldpassword"></TextField>
	        	<Label class="labelField">CONTRASEÑA NUEVA</Label>
	        	<TextField class="textSimple" passwordMask="true" id="password" hintText="  Entre 6 y 20 caracteres"></TextField>
	        	<Label class="labelField">CONFIRME CONTRASEÑA</Label>
	        	<TextField class="textSimple" passwordMask="true" id="password2" hintText="  Repetir"></TextField>
	        </ScrollView>
	        <View class="buttonSimple" onTouchstart="changeColor" onTouchend="changeColor" id="continueBtn" onClick="validateData">
	        	<Label id="btnText">Guardar</Label>
	        </View>
	        <View class="buttonSimple" onTouchstart="changeColor" onTouchend="changeColor" id="cancelBtn">
	        	<Label id="btnText" color="black">Cancelar</Label>
	        </View>
        </ScrollView>
    </View>
</Alloy>
