<Alloy>
    <View id="mainView">
        <View id="mainTopBar">
            <View id="menuButton"/>
			<View id="appTitle">
				<Label class="appTitleLabel">WISE</Label>
			</View>
			<View id="collapsibleButton" />
        </View>
        <ScrollView id="content">
        	<View id="reportNameContainer">
        		<Label id="reportName"></Label>
        	</View>
	        <ScrollView id="form">
	        	<Label class="labelField">NOMBRE COMPLETO</Label>
	        	<TextField class="textSimple" id="name" hintText="  Nombre"></TextField>
	        	<TextField class="textSimple" id="last" hintText="  Apellido"></TextField>
	        	<Label class="labelField">NOMBRE DE USUARIO</Label>
	        	<TextField class="textSimple" id="username" hintText="  Obligatorio"></TextField>
	        	<Label class="labelField">CONTRASEÃ‘A</Label>
	        	<TextField class="textSimple" passwordMask="true" id="password" hintText="  Entre 6 y 20 caracteres"></TextField>
	        	<TextField class="textSimple" passwordMask="true" id="password2" hintText="  Repetir"></TextField>
	        	
	        </ScrollView>
	        <View class="buttonSimple" id="continueBtn" onClick="validateData">
	        	<Label id="btnText">Continuar</Label>
	        </View>
        </ScrollView>
        <View id="photoMenu">
	    	<TableView id="photoMenuTable">
	    		<TableViewRow class="tableRow" id="takePhoto">
	    			<View>
	    				<Label>Tomar foto</Label>
	    			</View>
	    		</TableViewRow>
	    		<TableViewRow class="tableRow" id="selectPhoto">
	    			<View>
	    				<Label>Seleccionar foto existente</Label>
	    			</View>
	    		</TableViewRow>
	    		<TableViewRow class="tableRow" id="deletePhoto">
	    			<View>
	    				<Label>Eliminar imagen de perfil</Label>
	    			</View>
	    		</TableViewRow>
	    		<TableViewRow class="tableRow" id="cancelPhoto">
	    			<View>
	    				<Label>Cancelar</Label>
	    			</View>
	    		</TableViewRow>
	    	</TableView>
	    </View>
    </View>
</Alloy>
